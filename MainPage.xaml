    <StackLayout Padding="20" BackgroundColor="#DB6161">
        <Frame BackgroundColor="Pink"
               Padding="6" Margin="0,0,0,5">
            <Label x:Name="LblResult" 
                Text="0"
                   FontSize="36"
                   FontAttributes="Bold"
                   HorizontalOptions="End"></Label>
        </Frame>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                
                
                

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                
                
            </Grid.ColumnDefinitions>
            
            <!--row 1 -->

            <Button BackgroundColor="White" Grid.Row="0" 
                Grid.Column="0" 
                Text="1"
                    FontSize="Large"
                    x:Name="BtnOne"
                    Clicked="BtnNum_Clicked"/>
            <Button BackgroundColor="White" Grid.Row="0" 
                Grid.Column="1" 
                Text="2"
                    FontSize="Large"
                     Clicked="BtnNum_Clicked"/>
            <Button BackgroundColor="White" Grid.Row="0" 
                Grid.Column="2" 
                Text="3"
                    FontSize="Large"
                     Clicked="BtnNum_Clicked"/>
            
           
            
            
            <!--row 2-->

            <Button BackgroundColor="White" Grid.Row="1" 
                Grid.Column="0" 
                Text="4"
                FontSize="Large"
                     Clicked="BtnNum_Clicked"/>
            <Button BackgroundColor="White" Grid.Row="1" 
                Grid.Column="1" 
                Text="5"
                FontSize="Large"
                     Clicked="BtnNum_Clicked"/>
            <Button BackgroundColor="White" Grid.Row="1" 
                Grid.Column="2" 
                Text="6"
                FontSize="Large"
                     Clicked="BtnNum_Clicked"/>

            <!--row3-->

            <Button BackgroundColor="White" Grid.Row="2" 
                Grid.Column="0" 
                Text="7"
                FontSize="Large"
                     Clicked="BtnNum_Clicked"/>
            <Button BackgroundColor="White" Grid.Row="2" 
                Grid.Column="1" 
                Text="8"
                FontSize="Large"
                     Clicked="BtnNum_Clicked"/>
            <Button BackgroundColor="White" Grid.Row="2" 
                Grid.Column="2" 
                Text="9"
                FontSize="Large"
                     Clicked="BtnNum_Clicked"/>


            <!--row4-->

            <Button BackgroundColor="White" Grid.Row="3" 
                Grid.Column="0" 
                Text="0"
                FontSize="Large"
                     Clicked="BtnNum_Clicked"/>
            <Button BackgroundColor="White" Grid.Row="3" 
                Grid.Column="1" 
                Text="+"
                FontSize="Large"
                    
                    Clicked="BtnNumOperation_Clicked"/>
            <Button BackgroundColor="White" Grid.Row="3" 
                Grid.Column="2" 
                Text="-"
                FontSize="Large"
                   
                    Clicked="BtnNumOperation_Clicked"/>


            <!--row5-->

            <Button BackgroundColor="White" Grid.Row="4" 
                Grid.Column="0" 
                Text="AC"
                FontSize="Large"
                     Margin="0,0,0,-40"
                    x:Name="BtnClear"
                    Clicked="BtnClear_Clicked"/>
            <Button BackgroundColor="White" Grid.Row="4" 
                Grid.Column="1" 
                Text="X"
                FontSize="Large"
                    
                    Clicked="BtnNumOperation_Clicked"/>
            <Button BackgroundColor="White" Grid.Row="4" 
                Grid.Column="2" 
                Text="%"
                FontSize="Large"
                    
                    Clicked="BtnNumOperation_Clicked"/>

            <!--row6-->


            <Button BackgroundColor="White" Grid.Row="5" 
                Grid.Column="1" 
                Text="="
                FontSize="Large"
                      Padding="5" Margin="0,0,-25,10"
                    FontAttributes="Bold"
                    x:Name="BtnEql"
                    Clicked="BtnEql_Clicked"/>
            <Button BackgroundColor="White" Grid.Row="5" 
                Grid.Column="2" 
                Text="."
                FontSize="Large"
                      Padding="5" Margin="25,0,0,10" 
                    FontAttributes="Bold"
                    
                    Clicked="BtnNum_Clicked"/>
            
        </Grid>
      
    </StackLayout>
    
    

</ContentPage>
